@model Vidly.ViewModels.IndexCustomerViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@{
    if (Model.Customers.Count > 0)
    {
        <table class="table">
            <tr>
                <th>#</th>
                <th>Name</th>
            </tr>
            <tr>
                @{
                    foreach (var user in Model.Customers)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td><a href="/customers/details/@user.Id">@user.Name</a></td>
                        </tr>
                    }
                }
            </tr>
        </table>
    }
    else
    {
        <h3>No customers found</h3>
    }
}