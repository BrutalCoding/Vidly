@using Microsoft.Ajax.Utilities
@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@{
    if (Model.Any())
    {
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Genre</th>
            </tr>
            @{
                foreach (var movie in Model)
                {
                    <tr>
                        <td>@movie.Name</td>
                        @if (movie.Genre != null)
                        {
                            <td>@movie.Genre.Name</td>
                        }
                        else
                        {
                            <td>No genre specified</td>
                        }

                    </tr>
                }
            }
        </table>
    }
    else
    {
        <h3>No movies found</h3>
    }
}