@model Vidly.ViewModels.IndexMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@{
    if (Model.Movies.Count > 0)
    {
        <table class="table">
            <tr>
                <th>#</th>
                <th>Name</th>
            </tr>
            <tr>
                @{
                    foreach (var movie in Model.Movies)
                    {
                    <tr>
                        <td>@movie.Id</td>
                        <td>@movie.Name</td>
                    </tr>
                    }
                }
                </tr>
            </table>
                    }
                    else
                    {
                        <h3>No movies found</h3>
                    }
}