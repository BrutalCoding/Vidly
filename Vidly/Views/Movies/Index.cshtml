@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@{
    if (Model.Any())
    {
        <table class="table">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Genre</th>
            </tr>
            <tr>
                @{
                    foreach (var movie in Model)
                    {
                    <tr>
                        <td>@movie.Id</td>
                        <td><a href="/movies/details/@movie.Id">@movie.Name</a></td>
                        <td>@movie.Genre</td>
                    </tr>
                    }
                }
                </tr>
            </table>
                    }
                    else
                    {
                        <h3>No movies found</h3>
                    }
}